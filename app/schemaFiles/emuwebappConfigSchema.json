				"drawZeroLine": {
					"type": "boolean"
				},
				"bundleComments": {
					"type": "boolean"
				},
				"bundleFinishedEditing": {
					"type": "boolean"
				},
				"showPerspectivesSidebar": {
					"type": "boolean"
				}
			},
