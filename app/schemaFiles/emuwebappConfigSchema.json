				"toggleSideBars": {
					"type": "integer"
				},
				"zoomSel": {
					"type": "integer"
				},
				"zoomAll": {
					"type": "integer"
				},
				"zoomOut": {
					"type": "integer"
				},
				"zoomIn": {
					"type": "integer"
				},
				"shiftViewPortLeft": {
					"type": "integer"
				},
				"shiftViewPortRight": {
					"type": "integer"
				},
				"playEntireFile": {
					"type": "integer"
				},
				"playAllInView": {
					"type": "integer"
				},
				"playSelected": {
					"type": "integer"
				},
				"deletePreselBoundary": {
					"type": "integer"
				},
				"selNextPrevItem": {
					"type": "integer"
				},
				"selNextItem": {
					"type": "integer"
				},
				"selPrevItem": {
					"type": "integer"
				},
				"createNewItemAtSelection": {
					"type": "integer"
				},
				"levelUp": {
					"type": "integer"
				},
				"levelDown": {
					"type": "integer"
