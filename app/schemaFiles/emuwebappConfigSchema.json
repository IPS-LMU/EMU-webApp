		"restrictions": {
			"type": "object",
			"properties": {
				"playback": {
					"type": "boolean"
				},
				"correctionTool": {
					"type": "boolean"
				},
				"editItemSize": {
					"type": "boolean"
				},
				"editItemName": {
					"type": "boolean"
				},
				"deleteItemBoundary": {
					"type": "boolean"
				},
				"deleteItem": {
					"type": "boolean"
				},
				"deleteLevel": {
					"type": "boolean"
				},
				"addItem": {
					"type": "boolean"
				},
				"drawCrossHairs": {
					"type": "boolean"
				},
				"drawSampleNrs": {
					"type": "boolean"
