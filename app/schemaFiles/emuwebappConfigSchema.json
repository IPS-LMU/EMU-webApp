{
	"description": "Schema for emuwebappConfig file for the EMU-webApp",
	"type": "object",
	"properties": {
		"main": {
			"type": "object",
			"properties": {
				"autoConnect": {
					"type": "boolean"
				},
				"serverUrl": {
					"type": "string"
				},
				"serverTimeoutInterval": {
					"type": "integer"
				},
				"comMode": {
					"enum": ["DEMO", "WS", "EMBEDDED", "GITLAB"]
				},
				"catchMouseForKeyBinding": {
					"type": "boolean"
				}
			},
			"additionalProperties": false
		},
		"keyMappings": {
			"type": "object",
			"properties": {
				"toggleSideBarLeft": {
					"type": "integer"
				},
				"toggleSideBarRight": {
					"type": "integer"
				},
				"zoomSel": {
					"type": "integer"
				},
				"zoomAll": {
					"type": "integer"
				},
				"zoomOut": {
					"type": "integer"
				},
				"zoomIn": {
					"type": "integer"
				},
				"showHierarchy": {
					"type": "integer"
				},
				"hierarchyDeleteLink": {
					"type": "integer"
				},
				"hierarchyDeleteItem": {
					"type": "integer"
				},
				"hierarchyAddItemBefore": {
					"type": "integer"
				},
				"hierarchyAddItemAfter": {
					"type": "integer"
				},
				"hierarchyAddLink": {
					"type": "integer"
				},
				"hierarchyRotate": {
					"type": "integer"
				},
				"hierarchyPlayback": {
					"type": "integer"
				},
				"hierarchyCommitEdit": {
					"type": "integer"
				},
				"hierarchyCancelEdit": {
					"type": "integer"
				},
				"shiftViewPortLeft": {
					"type": "integer"
				},
				"shiftViewPortRight": {
					"type": "integer"
				},
				"playEntireFile": {
					"type": "integer"
				},
				"playAllInView": {
					"type": "integer"
				},
				"playSelected": {
					"type": "integer"
				},
				"deletePreselBoundary": {
					"type": "integer"
				},
				"selNextPrevItem": {
					"type": "integer"
				},
				"selNextItem": {
					"type": "integer"
				},
				"selPrevItem": {
					"type": "integer"
				},
				"createNewItemAtSelection": {
					"type": "integer"
				},
				"levelUp": {
					"type": "integer"
				},
				"levelDown": {
					"type": "integer"
				},
				"undo": {
					"type": "integer"
				},
				"redo": {
					"type": "integer"
				},
				"shrinkSelSegmentsLeft": {
					"type": "integer"
				},
				"shrinkSelSegmentsRight": {
					"type": "integer"
				},
				"expandSelSegmentsRight": {
					"type": "integer"
				},
				"expandSelSegmentsLeft": {
					"type": "integer"
				},
				"selectFirstContourCorrectionTool": {
					"type": "integer"
				},
				"selectSecondContourCorrectionTool": {
					"type": "integer"
				},
				"selectThirdContourCorrectionTool": {
					"type": "integer"
				},
				"selectFourthContourCorrectionTool": {
					"type": "integer"
				},
				"selectFifthContourCorrectionTool": {
					"type": "integer"
				},
				"selectNoContourCorrectionTool": {
					"type": "integer"
				},
				"selectItemsInSelection": {
					"type": "integer"
				},
				"snapBoundaryToNearestTopBoundary": {
					"type": "integer"
				},
				"snapBoundaryToNearestBottomBoundary": {
					"type": "integer"
				},
				"snapBoundaryToNearestZeroCrossing": {
					"type": "integer"
				},
				"shift": {
					"type": "integer"
				},
				"alt": {
					"type": "integer"
				},
				"esc": {
					"type": "integer"
				},
				"saveBndl": {
					"type": "integer"
				}
			},
			"additionalProperties": false
		},
		"spectrogramSettings": {
			"type": "object",
			"properties": {
				"windowSizeInSecs": {
					"type": "number"
				},
				"rangeFrom": {
					"type": "integer"
				},
				"rangeTo": {
					"type": "integer"
				},
				"dynamicRange": {
					"type": "integer"
				},
				"window": {
					"enum": ["BARTLETT", "BARTLETTHANN", "BLACKMAN", "COSINE", "GAUSS", "HAMMING", "HANN", "LANCZOS", "RECTANGULAR", "TRIANGULAR"]
				},
				"preEmphasisFilterFactor": {
					"type": "number"
				},
				"transparency": {
					"type": "integer",
					"minimum": 0,
					"maximum": 255
				},
				"drawHeatMapColors": {
					"type": "boolean"
				},
				"heatMapColorAnchors": {
					"type": "array",
					"items": {
						"type": "array",
						"items": {
							"type": "integer",
							"minimum": 0,
							"maximum": 255
						},
						"minItems": 3,
						"maxItems": 3
					}
				},
				"invert": {
					"type": "boolean"
				}
			},
			"additionalProperties": false
		},
		"perspectives": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"signalCanvases": {
						"type": "object",
						"properties": {
							"order": {
								"type": "array",
								"items": {
									"type": "string"
								}
							},
							"assign": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"signalCanvasName": {
											"type": "string"
										},
										"ssffTrackName": {
											"type": "string"
										}
									},
									"required": ["signalCanvasName", "ssffTrackName"],
									"additionalProperties": false
								}
							},
							"horizontalLines": {
								"type": "array",
								"items": {
									"type" : "object",
									"properties": {
										"ssffTrackName": {
											"type": "string"
										},
										"yValues": {
											"type": "array",
											"items": {
												"type": "number"
											}
										}
									},
									"required": ["ssffTrackName", "yValues"],
									"additionalProperties": false
								}
							},
							"contourLims": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"ssffTrackName": {
											"type": "string"
										},
										"minContourIdx": {
											"type": "integer"
										},
										"maxContourIdx": {
											"type": "integer"
										}
									},
									"required": ["ssffTrackName", "minContourIdx", "maxContourIdx"],
									"additionalProperties": false
								}
							},
							"contourColors": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"ssffTrackName": {
											"type": "string"
										},
										"colors": {
											"type": "array",
											"items": {
												"type": "string"
											}
										}
									},
									"required": ["ssffTrackName", "colors"],
									"additionalProperties": false
								}

							}
						},
						"required": ["order", "assign", "contourLims"],
						"additionalProperties": true
					},
					"levelCanvases": {
						"type": "object",
						"properties": {
							"order": {
								"type": "array",
								"items": {
									"type": "string"
								}
							},
							"labelFontFamily": {
								"type": "string"
							},
							"labelFontPxSize":{
								"type": "integer"
							}
						},
						"required": ["order"],
						"additionalProperties": false
					},
					"twoDimCanvases": {
						"type": "object",
						"properties": {
							"order": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"maxItems": 1
							},
							"twoDimDrawingDefinitions": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"name": {
											"type": "string"
										},
										"dots": {
											"type": "array",
											"items": {
												"type": "object",
												"properties": {
													"name": {
														"type": "string"
													},
													"xSsffTrack": {
														"type": "string"
													},
													"xContourNr": {
														"type": "integer"
													},
													"ySsffTrack": {
														"type": "string"
													},
													"yContourNr": {
														"type": "integer"
													},
													"color": {
														"type": "string"
													}
												},
												"required": ["name", "xSsffTrack", "xContourNr", "ySsffTrack", "yContourNr"],
												"additionalProperties": false
											}
										},
										"connectLines": {
											"type": "array",
											"items": {
												"type": "object",
												"properties": {
													"fromDot": {
														"type": "string"
													},
													"toDot": {
														"type": "string"
													},
													"color": {
														"type": "string"
													}
												},
												"required": ["fromDot", "toDot", "color"],
												"additionalProperties": false
											}
										},
										"staticDots": {
											"type": "array",
											"items": {
												"type": "object",
												"properties": {
													"name": {
														"type": "string"
													},
													"xNameCoordinate": {
														"type": "integer"
													},
													"yNameCoordinate": {
														"type": "integer"
													},
													"xCoordinates": {
														"type": "array",
														"items": {
															"type": "integer"
														}
													},
													"yCoordinates": {
														"type": "array",
														"items": {
															"type": "integer"
														}
													},
													"connect": {
														"type": "boolean"
													},
													"color": {
														"type": "string"
													}

												},
												"required": ["name", "xNameCoordinate", "yNameCoordinate", "xCoordinates", "yCoordinates", "connect", "color"],
												"additionalProperties": false
											}
										},
									  "staticContours": {
										"type": "array",
										"items": {
										  "type": "object",
										  "properties": {
											"name": {
											  "type": "string"
											},
											"xSsffTrack": {
											  "type": "string"
											},
											"xContourNr": {
											  "type": "integer"
											},
											"ySsffTrack": {
											  "type": "string"
											},
											"yContourNr": {
											  "type": "integer"
											},
											"connect":{
											  "type": "boolean"
											},
											"color": {
											  "type": "string"
											}
										  },
										  "required": ["name", "xSsffTrack", "xContourNr", "ySsffTrack", "yContourNr"],
										  "additionalProperties": false
										}
									  }
									},
									"required": ["name", "dots", "connectLines", "staticDots"],
									"additionalProperties": false
								}
							}
						},

						"required": ["order"],
						"additionalProperties": false
					},
					"required": ["name", "signalCanvases", "levelCanvases", "twoDimCanvases"],
					"additionalProperties": false
				}
			}
		},
		"labelCanvasConfig": {
			"type": "object",
			"properties": {
				"addTimeMode": {
					"enum": ["absolute", "relative"]
				},
				"addTimeValue": {
					"type": "integer"
				},
				"newSegmentName": {
					"type": "string"
				},
				"newEventName": {
					"type": "string"
				}
			},
			"required": [],
			"additionalProperties": false
		},
		"restrictions": {
			"type": "object",
